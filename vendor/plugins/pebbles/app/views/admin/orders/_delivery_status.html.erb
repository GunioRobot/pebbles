
<span id='<%= dom_id(order, 'order') %>' > 
	<span id='<%= "spinner_#{order.id}" %>' style="display:none">
		<img src='/images/spinner.gif'>
	</span>
  <input type='hidden' name='id' value='<%= order.id %>'>
  <%= select_tag( "delivery_status_#{order.id}",
 				  options_for_select(OrderDeliveryStatus::LIST, order.delivery_status)) %>
</span>

 <%= observe_field "delivery_status_#{order.id}",
           :url => { :action => 'change_delivery_status',
           :form_authenticity_token => form_authenticity_token },
       	   :before => "Element.show('spinner_#{order.id}')",
		   :success => "Element.hide('spinner_#{order.id}')",
           :submit => dom_id(order, 'order') %>