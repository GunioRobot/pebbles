

<div id="category-drop-down">
	<br/><h2>Category:</h2>
	<select name="category_select">
	<% for category in @categories %>
		<% if category.level == 1 %>
		  <option value="<%= category.id %>"><%= category.name %></option>
		 <% if category.children.size > 0 %>
			<% category.children.each { |subcat| %>
		  		<option value="<%= subcat.id %>">&nbsp;&nbsp;&nbsp;&nbsp;<%= subcat.name %></option>
		    <% } %>
		<% end %>
		<% end %>
	<% end %>
	</select>
	<%= link_to_remote "Add Category", 
						:submit => 'category-drop-down',
						:url => { :action => 'add_to_category', :id => @product.id } %>
</div>
<br/><br/>

<div id='category_list'>
	<% if @product.categories.length > 0 %>
		<%= render :partial => 'category_list', 
	        :locals => { :product_id => @product.id, :categories => @product.categories } %>
	<% end %>
</div>

