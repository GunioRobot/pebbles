<h1>Listing Variants</h1>
<div class="gt-table-controls clearfix">
	<table class="gt-list-table">
		<thead>
		  <tr>
		    <% product.product_options.each do |option| %>
		      <% unless option.new_record? %>
		        <th> Option: <%= option.name %></th>
		      <% end %>
		    <% end %>
			<th>Inventory</th>
			<th>SKU</th>
			<th>Price</th>
			<th>Weight</th>
		  </tr>
  	</thead>
		<tbody>
		  <% form_for [:admin, product] do |form|%>
  		  <% form.fields_for :variants do |variant_form| %>
  			  <tr>
  			    <% variant_form.object.product_option_selections.each do |selection| %>
  			        <td><%= selection.name %></td>
  			    <% end %>
  				  <td><%= variant_form.text_field :inventory, :size => 5 %></td>
  				  <td><%= variant_form.text_field :sku, :size => 10 %></td>
  				  <td><%= variant_form.text_field :price, :size => 5 %></td>
  				  <td><%= variant_form.text_field :weight, :size => 5 %></td>
  			  </tr>
    		<% end %>
    		<tr><td>
    	  	<%= image_submit_tag 'gt/btn-save.jpg', :class => 'gt-submit-btn' %>
    		</tr></td>
    	<% end %>
  	</tbody>
	</table>
</div>