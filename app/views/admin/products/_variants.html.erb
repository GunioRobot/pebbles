<h1>Listing Variants</h1>
<div class="gt-table-controls clearfix">
	<table class="gt-list-table">
		<thead>
		  <tr>
		    <% product.product_options.each do |option| %>
		      <th> Option: <%= option.name %></th>
		    <% end %>
			<th>Inventory</th>
			<th>SKU</th>
			<th>Price</th>
			<th>Weight</th>
			<th>ID</th>
		  </tr>
  		</thead>
		<tbody>
			<% count = 0 %>
			 <% @products.each do |product| %>
			 <tr <%= "class='even'" if (count % 2) == 0 %>>
				<td><%= product.sku %></td>
				<td><%= product.name %></td>
				<td><%= product.price %></td>
				<td><%= product.weight %></td>
				<td><%= product.id %></td>
			    <td class='blank'><%= link_to 'Show', admin_product_path(product.id) %></td>
			    <td class='blank'><%= link_to 'Edit', edit_admin_product_path(product.id) %></td>
			    <td class='blank'>
					<%= link_to 'Destroy', admin_product_path(product.id), 
								:confirm => 'Are you sure?', 
								:method => :delete %>
				</td>
			  </tr>
			  <% count += 1 %>
			<% end %>
	  	</tbody>
	</table>
</div>